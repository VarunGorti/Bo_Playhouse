<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:windowSoftInputMode="adjustResize"
    tools:context=".BattleCircleActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/correctWordsTextView"
            android:layout_width="346dp"
            android:layout_height="500dp"
            android:layout_marginTop="64dp"
            android:clickable="false"
            android:duplicateParentState="false"
            android:gravity="clip_vertical|center_horizontal"
            android:nestedScrollingEnabled="true"
            android:text="@string/edit_wordsCompleted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/wordInputEditText"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true"
            android:hint="@string/edit_wordAttempt"
            android:inputType="text"
            android:scrollbars="vertical"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/enterButton"
            android:layout_width="109dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:onClick="inputWord"
            android:orientation="horizontal"
            android:text="@string/button_enter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wordInputEditText" />

        <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/wordInputEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="256dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:progress="@android:integer/config_shortAnimTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timeUpTextView"
            android:layout_width="107dp"
            android:layout_height="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/textView_timeUp"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/progressBar"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/Score"
            android:layout_width="111dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:text="@string/textView_score"
            app:layout_constraintEnd_toEndOf="@+id/correctWordsTextView"
            app:layout_constraintTop_toTopOf="@+id/correctWordsTextView" />

</android.support.constraint.ConstraintLayout>
