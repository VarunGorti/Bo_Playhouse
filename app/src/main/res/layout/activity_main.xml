<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.example.bodeng.boplayhouse.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/titleBox"
        android:layout_width="331dp"
        android:layout_height="181dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="397dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleFrame"
            android:layout_width="327dp"
            android:layout_height="287dp"
            android:gravity="center"
            android:text="Game TItle TBD"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/numPlaysLayout"
        android:layout_width="335dp"
        android:layout_height="186dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBox">

        <Spinner
            android:id="@+id/playerCountSpinner"
            android:layout_width="208dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numPlayView" />

        <TextView
            android:id="@+id/numPlayView"
            android:layout_width="221dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/playerCountSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/startbutton"
        android:layout_width="301dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:text="Start"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numPlaysLayout" />

</android.support.constraint.ConstraintLayout>
